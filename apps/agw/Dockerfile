# Run the container with `docker run -p 3000:3000 -t agw`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system agw && \
          adduser --system -G agw agw

COPY dist/apps/agw agw/
RUN chown -R agw:agw .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix agw --omit=dev -f install

CMD [ "node", "agw" ]
